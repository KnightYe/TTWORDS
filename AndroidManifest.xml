<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhu.ttwords"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="com.zhu.ttwords.TTWORDS"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.zhu.ttwords.activity.MainActivity" >
        </activity>
        <activity
            android:name="com.zhu.ttwords.activity.LoadingActivity"
            android:theme="@style/android:Theme.Holo.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zhu.ttwords.activity.StudyActivity"
            android:theme="@style/android:Theme.Holo.Light.NoActionBar"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity android:name="com.zhu.ttwords.activity.LoginActivity" >
        </activity>
        <activity
            android:name="com.zhu.ttwords.activity.SettingActivity"
            android:label="@string/title_activity_setting" >
        </activity>
    </application>

</manifest>